<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="jp.ac.chiba_fjb.x14b_d.maguro.TeamJoinFragment"
    android:background="@color/bac">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/modoru"
            android:id="@+id/imageBack"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@null" />


        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/setu"
            android:id="@+id/imageSetuzoku"
            android:background="@null"
            android:layout_below="@+id/editPass"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="42dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editPass"
            android:background="@drawable/wakusan"
            android:textColor="@android:color/background_dark"
            android:padding="15dp"
            android:layout_below="@+id/imageBack"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="31dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView19"
            android:text="パスワードを入力してください"
            android:textColor="@color/gts"
            android:textSize="24sp"
            android:layout_above="@+id/editPass"
            android:layout_centerHorizontal="true" />

        <TextView
            android:text="(チーム名)に接続します"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView19"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="14dp"
            android:id="@+id/textView10"
            android:textSize="24sp"
            android:textColor="@color/gts" />

    </RelativeLayout>
</FrameLayout>
