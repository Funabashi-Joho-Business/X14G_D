<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="jp.ac.chiba_fjb.x14b_d.maguro.OkJoinFragment"
    android:background="@color/bac">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/modoru"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/imageBack"
            android:background="@null" />

        <TextView
            android:text="レーダーに同じチームが表示されます"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView15"
            android:textSize="30sp"
            android:layout_below="@+id/textView14"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="19dp"
            android:textColor="@color/gts" />

        <TextView

            android:text="に参加しました"


            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView14"
            android:textSize="36sp"
            android:textColor="@color/gts"
            android:layout_below="@+id/imageBack"
            android:layout_alignRight="@+id/textView15"
            android:layout_alignEnd="@+id/textView15"
            android:layout_marginRight="23dp"
            android:layout_marginEnd="23dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="14dp"
            android:layout_marginEnd="14dp"
            android:id="@+id/textTeamname"
            android:textSize="30sp"
            android:textColor="@color/gts"
            android:layout_above="@+id/textView15"
            android:layout_toLeftOf="@+id/textView14"
            android:layout_toStartOf="@+id/textView14" />


    </RelativeLayout>

</FrameLayout>
