<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="jp.ac.chiba_fjb.x14b_d.maguro.TeamCreateFragment"
    android:background="@color/bac">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView18"
            android:text="チーム名とパスワードを入力してください"
            android:textColor="@color/gts"
            android:textSize="24sp"
            android:layout_alignBottom="@+id/imageBack"
            android:layout_toRightOf="@+id/imageBack"
            android:layout_toEndOf="@+id/imageBack"
            android:layout_marginLeft="11dp"
            android:layout_marginStart="11dp"
            android:layout_marginBottom="23dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/modoru"
            android:id="@+id/imageBack"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@null" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView19"
            android:text="チーム名とパスワードを入力してください"
            android:textColor="@color/gts"
            android:textSize="24sp"
            android:layout_alignBottom="@+id/imageBack"
            android:layout_toRightOf="@+id/imageBack"
            android:layout_toEndOf="@+id/imageBack"
            android:layout_marginLeft="11dp"
            android:layout_marginStart="11dp"
            android:layout_marginBottom="23dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editName"
            android:background="@drawable/wakusan"
            android:textColor="@android:color/background_dark"
            android:padding="15dp"
            android:layout_below="@+id/imageBack"
            android:layout_alignLeft="@+id/editPass"
            android:layout_alignStart="@+id/editPass" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/setu"
            android:id="@+id/imageSetuzoku"
            android:background="@null"
            android:layout_marginTop="21dp"
            android:layout_below="@+id/editPass"
            android:layout_centerHorizontal="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editPass"
            android:background="@drawable/wakusan"
            android:textColor="@android:color/background_dark"
            android:padding="15dp"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/editName"
            android:layout_centerHorizontal="true" />

        <TextView
            android:text="パスワード"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView21"
            android:textSize="24sp"
            android:textColor="@color/gts"
            android:layout_alignBaseline="@+id/editPass"
            android:layout_alignBottom="@+id/editPass"
            android:layout_alignRight="@+id/textView20"
            android:layout_alignEnd="@+id/textView20" />

        <TextView
            android:text="チーム名"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView20"
            android:textColor="@color/gts"
            android:textSize="24sp"
            android:layout_alignBaseline="@+id/editName"
            android:layout_alignBottom="@+id/editName"
            android:layout_toRightOf="@+id/imageBack"
            android:layout_toEndOf="@+id/imageBack" />

    </RelativeLayout>
</FrameLayout>
