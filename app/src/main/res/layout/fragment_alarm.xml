<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="jp.ac.chiba_fjb.x14b_d.maguro.AlermFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bac">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:layout_marginBottom="24dp"
            android:id="@+id/editTimer"
            android:padding="15dp"
            android:background="@drawable/wakusan"
            android:textColor="@android:color/background_dark"
            android:layout_above="@+id/start"
            android:layout_centerHorizontal="true" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/sette"
            android:id="@+id/start"
            android:background="@null"
            android:layout_marginBottom="45dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:text="時間を設定してください"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/editTimer"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="41dp"
            android:id="@+id/textView22"
            android:textColor="@color/gts"
            android:textSize="24sp" />

        <TextView
            android:text="分"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView9"
            android:textSize="24sp"
            android:textColor="@color/gts"
            android:layout_alignBottom="@+id/editTimer"
            android:layout_toRightOf="@+id/editTimer"
            android:layout_toEndOf="@+id/editTimer"
            android:layout_marginLeft="11dp"
            android:layout_marginStart="11dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/modoru"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/imageBack"
            android:background="@null" />

    </RelativeLayout>

</FrameLayout>
